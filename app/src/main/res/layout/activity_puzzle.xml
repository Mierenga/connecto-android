<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background"
    tools:context="eskimwier.connecto.PuzzleActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/game_table"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_table"
        android:id="@+id/win_text"
        android:textSize="16sp"
        android:text="Puzzle Complete"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        />
    <LinearLayout
        android:layout_below="@id/win_text"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/last_game_button"
            android:textColor="#AAAAAA"
            android:background="@color/black_overlay"
            android:text="«"
            android:textSize="50sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_game_button"
            android:textColor="#AAAAAA"
            android:background="@color/black_overlay"
            android:text="»"
            android:textSize="50sp"
            />
    </LinearLayout>
</RelativeLayout>
